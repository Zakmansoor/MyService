@model RequestViewModel

@{
    ViewData["Title"] = "Send Request";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Send Request</h2>
                </div>
                <div class="card-body">
                    <form asp-action="SendRequest" method="post">
                        @Html.AntiForgeryToken()

                        

                        

                        <div class="form-group">
                            <label asp-for="ServiceId" class="control-label"></label>
                            <select asp-for="ServiceId" class="form-control"
                                    asp-items="@(new SelectList(Model.Services, "ServiceID", "Name"))">
                                <option value="">-- Select Service --</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="OrderDate" class="control-label"></label>
                            <input asp-for="OrderDate" type="date" class="form-control" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="false">Pending</option>
                                <option value="true">Completed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment" class="control-label"></label>
                            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">Send Request</button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
