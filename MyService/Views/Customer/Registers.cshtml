@model Infarstuructre.ViewModel.RegisterCustomerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>تسجيل مستخدم جديد</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">
    <!-- Arabic Font -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Tajawal', sans-serif;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 0.9rem;
    }

    .register-page {
        background: #e9ecef;
    }

    .register-logo a {
        color: #007bff;
        font-weight: 700;
    }

    .register-card-body {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .input-group-text {
        border-left: 0;
        border-right: 1px solid #ced4da;
    }

    .custom-file-label::after {
        left: 0;
        right: auto;
        content: "استعراض";
    }
</style>
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="#">تسجيل <b>مستخدم جديد</b></a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">إنشاء حساب جديد</p>

                <form asp-action="Registers" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- قسم معلومات المستخدم -->
                    <div class="input-group mb-3">
                        <input asp-for="RegisterCustomer.Name" class="form-control" placeholder="الاسم الكامل">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterCustomer.Name" class="text-danger d-block"></span>

                    <div class="input-group mb-3">
                        <input asp-for="RegisterCustomer.Email" class="form-control" placeholder="البريد الإلكتروني">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterCustomer.Email" class="text-danger d-block"></span>
                    
                    <div class="input-group mb-3">
                        <input type="password" asp-for="RegisterCustomer.Password" class="form-control" placeholder="كلمة المرور">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterCustomer.Password" class="text-danger d-block"></span>

                    <div class="input-group mb-3">
                        <input type="password" asp-for="RegisterCustomer.ComparePassword" class="form-control" placeholder="تأكيد كلمة المرور">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterCustomer.ComparePassword" class="text-danger d-block"></span>

                    <!-- رفع الصورة -->
                    <div class="form-group">
                        <div class="input-group">
                            <div class="custom-file">
                                <input asp-for="RegisterCustomer.Image" type="file" class="custom-file-input" id="imageFile">
                                <span asp-validation-for="RegisterCustomer.Image" class="text-danger"></span>
                                <label class="custom-file-label" for="imageFile">اختر صورة</label>
                            </div>
                        </div>
                    </div>

                    <!-- زر التسجيل -->
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">تسجيل الحساب</button>
                        </div>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Login" class="text-center">لديك حساب بالفعل؟ سجل الدخول هنا</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts Section -->
    @section Scripts {
        <!-- Include validation scripts -->
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/Admin/dist/js/adminlte.min.js"></script>
        <!-- File Input Translation -->
        <script>
            document.querySelector('.custom-file-input').addEventListener('change', function(e) {
                var fileName = document.getElementById("imageFile").files[0].name;
                var nextSibling = e.target.nextElementSibling;
                nextSibling.innerText = fileName;
            });
        </script>
    }
</body>
</html>