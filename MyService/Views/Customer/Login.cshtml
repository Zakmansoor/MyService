@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>تسجيل الدخول</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap, Font‑Awesome, AdminLTE, etc. -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css" />
    <style>
        body {
            direction: rtl;
            text-align: right;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>تسجيل</b>الدخول</a>
        </div>

        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">أدخل بياناتك للدخول</p>

                @* Show any non‑field errors (e.g. forbidden role) *@
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <form asp-action="Login" asp-controller="Customer" method="post">
                    @Html.AntiForgeryToken()

                    <div class="input-group mb-3">
                        <input asp-for="Eamil" class="form-control" placeholder="البريد الإلكتروني" />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="Eamil" class="text-danger"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور" />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <div class="row mb-3">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="RememberMy" type="checkbox" id="remember" />
                                <label for="remember">  تذكرني</label>&nbsp&nbsp&nbsp

                            </div>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">دخول</button>
                </form>

                <p class="mb-1 mt-3">
                    <a asp-action="Registers" asp-controller="Customer">إنشاء حساب جديد</a>
                </p><p class="mb-1 mt-3">
                    <a asp-action="Login" asp-controller="Accounts" asp-area="Admin">الدخول كادمن او كموظف</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Scripts for validation -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
